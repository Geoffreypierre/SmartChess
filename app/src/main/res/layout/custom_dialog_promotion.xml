<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choisissez votre promotion"
            android:textColor="#F65254"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/btn_promotion_tour"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:layout_marginEnd="10dp"
                android:src="@drawable/rook_white" />

            <ImageButton
                android:id="@+id/btn_promotion_cavalier"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/knight_white"
                android:padding="10dp"
                android:layout_marginEnd="10dp" />

            <ImageButton
                android:id="@+id/btn_promotion_fou"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bishop_white"
                android:padding="10dp"
                android:layout_marginEnd="10dp" />

            <ImageButton
                android:id="@+id/btn_promotion_dame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/queen_white"
                android:padding="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_valider_promotion"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Valider"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F65254"
            android:textAllCaps="false"
            app:cornerRadius="15dp"
            android:padding="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>