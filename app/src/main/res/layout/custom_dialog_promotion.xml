<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingVertical="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choisissez votre promotion"
            android:textColor="#F65254"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="32dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <ImageButton
                android:id="@+id/btn_promotion_tour"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/rook_white" />

            <ImageButton
                android:id="@+id/btn_promotion_cavalier"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/knight_white" />

            <ImageButton
                android:id="@+id/btn_promotion_fou"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bishop_white" />

            <ImageButton
                android:id="@+id/btn_promotion_dame"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/queen_white" />
        </GridLayout>

        <Button
            android:id="@+id/btn_valider_promotion"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Valider"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F65254"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            android:padding="5dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
