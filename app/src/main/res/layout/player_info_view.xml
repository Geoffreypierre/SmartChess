<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Photo de profil -->
    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/king" />

    <!-- Informations textuelles (Pseudo et Elo) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/text_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Pseudo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_elo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Elo"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Zone d'affichage des pièces capturées -->
    <LinearLayout
        android:id="@+id/captured_pieces_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp">
        <!-- Les ImageViews seront ajoutés dynamiquement -->
    </LinearLayout>

    <!-- Colonne verticale : score diff + timer -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end">

        <!-- Score -->
        <TextView
            android:id="@+id/text_score_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="+0"
            android:textSize="20sp"/>

        <!-- Timer -->
        <TextView
            android:id="@+id/text_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
